<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/imageView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@mipmap/nointernet_connection"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/dp_100"
    />
    <TextView
        android:id="@+id/error_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_4a4a4a"
        android:fontFamily="sans-serif"
        android:text="@string/error_1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_below="@+id/imageView"/>
    <TextView
        android:id="@+id/error_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@color/color_929292"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/error_2"
        android:layout_below="@+id/error_1"/>
    <Button
        android:id="@+id/retryButton"
        style="@style/retryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Retry"
        />
</RelativeLayout>